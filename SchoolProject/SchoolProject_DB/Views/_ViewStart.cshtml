@{
    // 判斷是否已登入
    if (Context.Session.GetString("MemberID") != null)
    {
        // 檢查是否為管理員
        var isAdmin = Context.Session.GetString("IsAdmin");
        if (isAdmin != null && isAdmin == "True")
        {
            // 使用管理員的 Layout
            Layout = "_Layout";
        }
        else
        {
            // 使用會員的 Layout
            Layout = "_Layout-Member";
        }
    }
    else
    {
        // 使用訪客的 Layout
        Layout = "_Layout-Guest";
    }
}
