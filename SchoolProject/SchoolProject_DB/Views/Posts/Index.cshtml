@model IEnumerable<SchoolProject_DB.ViewModels.PostWithRePostCountViewModel>

@{
    ViewData["Title"] = "留言區";
    string sessionMemberID = ViewBag.SessionMemberID; // 從 ViewBag 取得 Session 的 MemberID
}

<h1 class="alert alert-success text-center" role="alert">歡迎來到 @ViewData["Title"] ！</h1>

@if (!string.IsNullOrEmpty(sessionMemberID))
{
    <!-- 只有登入的使用者可以看到新增文章的按鈕 -->
    <div class="text-end">
        <a asp-action="Create" class="btn btn-outline-success">新增文章</a>
    </div>
}
<br />
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-6 col-xl-3 px-0">
                <div class="card h-100">
                    @if (item.Post.Photos != null && item.Post.ImageType != null)
                    {
                        <img src="@Url.Action("GetImage", "Posts", new { id = item.Post.PostID })" class="card-img-top" alt="Post Image" style="height: 300px; object-fit: cover; width: 100%;">
                    }
                    else
                    {
                        <img src="/images/placeholder.png" class="card-img-top" alt="Post Image" style="height: 300px; object-fit: cover; width: 100%;">
                    }

                    <!-- 卡片內文 -->
                    <div class="card-body">
                        <h5 class="card-title text-center">@Html.DisplayFor(modelItem => item.Post.PostTitle)</h5>
                    </div>
                    <div>
                        <p class="card-text text-end text-muted mt-auto me-2">
                            @if (item.Post.UpdatedAt.HasValue)
                            {
                                @item.Post.UpdatedAt?.ToString("yyyy/MM/dd hh:mm tt")
                            }
                            else
                            {
                                @item.Post.CreatedAt.ToString("yyyy/MM/dd hh:mm tt")
                            }
                            &nbsp;by
                            <a asp-controller="Members" asp-action="Details" asp-route-id="@item.Post.Member.MemberID" class="text-dark text-decoration-none">
                                @Html.DisplayFor(modelItem => item.Post.Member.UserName)
                            </a>
                        </p>
                    </div>

                    <!-- 卡片頁腳，包含查看按鈕 -->
                    <div class="card-footer text-center">
                        <a asp-action="Details" asp-route-id="@item.Post.PostID" class="btn btn-outline-success  w-100">查看文章</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>