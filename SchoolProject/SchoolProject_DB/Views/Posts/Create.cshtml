@model SchoolProject_DB.Models.Post

@{
    ViewData["Title"] = "新增文章";
}

<h2 style="display: inline;"><strong>@ViewData["Title"]</strong></h2>

<hr />

<div class="row">
    <!-- 左邊：輸入文章內容 -->
    <div class="col-lg-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- 隱藏的欄位，從 ViewBag 取得值 -->
            <input type="hidden" asp-for="PostID" value="@ViewBag.NewPostID" />
            <input type="hidden" asp-for="MemberID" value="@ViewBag.NewMemberID" />

            <!-- 標題輸入欄位 -->
            <div class="mb-3">
                <label asp-for="PostTitle" class="form-label"></label>
                <input asp-for="PostTitle" class="form-control" id="formGroupPostTitle" placeholder="請輸入標題">
                <span asp-validation-for="PostTitle" class="text-danger"></span>
            </div>

            <!-- 內文輸入欄位，文字框較高 -->
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" id="formGroupDescription" rows="8" placeholder="請輸入內文"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- 上傳圖片欄位 -->
            <div class="row align-items-center mt-3">
                <label asp-for="Photos" class="form-label"></label>
                <!-- 使用者可上傳自己的照片 -->
                <div class="col-md-9">
                    <div class="form-group">
                        <input type="file" name="uploadPhoto" id="uploadPhoto" class="form-control" />
                        <span>@ViewData["Message"]</span>
                    </div>
                </div>
                <!-- 清除上傳檔案的按鈕 -->
                <div class="col-md-3">
                    <div class="form-group">
                        <button type="button" class="btn btn-secondary" id="clearFileButton">
                            <i class="bi bi-trash3-fill fs-6"></i> 清除檔案
                        </button>
                    </div>
                </div>
            </div>

            <br />

            <!-- 提交按鈕 -->
            <div class="form-group btn-group w-100">
                <input type="submit" value="送出文章" class="btn btn-outline-primary  w-50" />
                <a asp-action="Index" class="btn btn-outline-dark  w-50">回上一頁</a>
            </div>
        </form>
    </div>

    <!-- 右邊：照片預覽區 -->
    <div class="col-lg-6" id="photoPreviewContainer">
        <!-- 加載動畫 -->
        <div id="loadingSpinner" class="spinner-border m-5" role="status" style="display:none;">
            <span class="visually-hidden">Loading...</span>
        </div>
        <!-- 照片預覽部分 -->
        <div id="photoPreview"></div>
    </div>
</div>

@section Scripts {
    <script>
        // 當使用者上傳照片時，觸發顯示照片預覽的邏輯
        $("#uploadPhoto").on("change", function (event) {
            var input = event.target;
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                showLoadingSpinner(); // 顯示加載動畫
                reader.onload = function (e) {
                    // 更新照片預覽
                    $("#photoPreview").html(`<img src="${e.target.result}" width="500" class="img-fluid" />`);
                    hideLoadingSpinner(); // 隱藏加載動畫
                }
                reader.readAsDataURL(input.files[0]); // 將照片文件讀取為 Data URL
            }
        });

        // 當按下 "Clear File" 按鈕時，清除上傳的檔案
        $("#clearFileButton").on("click", function () {
            $("#uploadPhoto").val(""); // 清除檔案
            $("#photoPreview").html(""); // 清空照片預覽
        });

        // 顯示加載動畫
        function showLoadingSpinner() {
            $("#loadingSpinner").show();
        }

        // 隱藏加載動畫
        function hideLoadingSpinner() {
            $("#loadingSpinner").hide();
        }
    </script>
}

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
